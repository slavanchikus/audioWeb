.container
  margin-left: auto

.queue
  display: flex
  flex-direction: row
  align-items: center
  margin-left: auto
  cursor: pointer
  >div
    &:nth-child(2)
      margin-left: 20px
    &:hover
      svg
        path
          fill: #ffa95e

.tools
  display: none

.item
  svg
    path
      fill: rgb(163, 162, 162) !important

.loop, .random
  svg
    path
      fill: #ffa95e !important

@media (max-width: 700px)
  .container
    width: 100%
    display: flex
    flex-direction: row
    align-items: center
    justify-content: space-around
    .queue
      margin-left: initial
      >div
        &:nth-child(2)
          margin-left: 50px
        &:hover
          svg
            path
              fill: rgb(163, 162, 162)

  .tools
    display: block
    >div
      >span
        font-size: 34px
        margin-right 50px
      >a
        height: 24px
        >svg
          width: 20px
          height: 20px
